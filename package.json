{
  "name": "gluco-noter",
  "version": "1.0.0",
  "description": "A fullstack app for noting the blood glucose level of a user",
  "main": "server.js",
  "type": "module",
  "repository": "https://github.com/rakshian24/gluco-noter.git",
  "author": "Rakshith Sindhiya R",
  "license": "MIT",
  "scripts": {
    "server": "nodemon server.js",
    "server:prod": "NODE_ENV=production nodemon server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "prod": "concurrently \"npm run server:prod\" \"npm run client\"",
    "start": "node server.js"
